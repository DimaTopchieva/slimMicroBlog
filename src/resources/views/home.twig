{% extends 'layouts/app.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
	<div class = "row text-left">
		{% if posts %}
			{% for post in posts %}
				<div class = "col-md-8 offset-2 my-3">
    				<h1 class="my-3 text-center">{{ post.title }}</h1>
    				{% if post.image %}
    					<div class="text-center">
    						<img src="../images/{{ post.image }}" class="img-fluid my-2" alt="{{ post.image }}">
    					</div>
    				{% endif %}
    				<p class="my-4">{{ post.content }}</p>			
    				<a href = "{{ path_for('singlePost.view', { 'ID': post.ID}) }}" class = "btn btn-primary btn-sm">View</a>
    			</div>
    		{% endfor %}	
		{% else %}
			<p>No posts to show.</p>
		{% endif %}	
    </div>
{% endblock %}